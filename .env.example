# Database Configuration
# Copy this file to .env and update with your database credentials

# Required: Database password
DB_PASSWORD=your_database_password_here

# Database connection settings
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=postgres
DB_NAME=postgres

# Connection pool settings
DB_POOL_MAX=5
DB_IDLE_TIMEOUT=5000
DB_CONNECTION_TIMEOUT=10000
DB_QUERY_TIMEOUT=30000

# SSL Configuration
# Set to false for local development without SSL
DB_SSL=false
# Set to false to reject self-signed certificates (default: true for security)
DB_SSL_REJECT_UNAUTHORIZED=true
# Set to true to allow self-signed certificates (useful for development)
DB_SSL_ALLOW_SELF_SIGNED=false
# Optional: Path to CA certificate file
# DB_SSL_CA_CERT=/path/to/ca-certificate.crt

# Server Configuration
# Port for HTTP server mode
PORT=3000
# Comma-separated list of allowed hosts for CORS (optional)
# ALLOWED_HOSTS=localhost,example.com

# Query Configuration
# Maximum number of rows per page
MAX_PAGE_SIZE=500
# Default number of rows per page
DEFAULT_PAGE_SIZE=100
# Automatically limit queries without LIMIT clause
AUTO_LIMIT=true
# Maximum payload size in bytes (default: 5MB)
MAX_PAYLOAD_SIZE=5242880

# Security Settings
# Set to false to allow write operations (INSERT, UPDATE, DELETE)
READ_ONLY=true

# Logging
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Development settings
NODE_ENV=development